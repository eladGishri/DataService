		{
			"name": "POST Data (Admin inserts)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Data ID returned\", function () {",
							"    const id = pm.response.text();",
							"    pm.environment.set(\"dataId\", id);",
							"    pm.expect(id).to.be.a('string');",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwtToken}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "\"Sample data content\""
				},
				"url": "http://localhost:5296/data"
			},
